        font-weight: bolder;
    }

    .inicio{
        font-size: 52px;
        position: relative;
        display: flex;
        justify-content: space-evenly ;
        align-items: center;
        background: black; /* Fondo negro fijo */
        color: white;
        padding: 0 20px 0 10px;
    }
    
    .inicio_texto{
      max-width: 600px;
    }
    .inicio_texto p{
        font-size: clamp(1em, 2vw, 3em);
        margin-bottom:50px;
        letter-spacing: normal;    
    }

    .inicio_texto p span{
      color: var(--var-blue);
    }

   /* img pulsera */
   .inicio_img{
    position: relative;
    top: -25px;
    right: -40px;
   }

   .inicio_img img{
    max-width: 450px;
    height: auto;
    animation: animate 2.5s linear infinite;
   }

  /*Botones inicio*/
  .btn{
    width: 190px;
    height: auto;
    color: var(--var-white);
    text-align: center;
    background-color: var(--var-blue);
    padding: 15px 25px;
    border-radius: 25px;
    transition: .4s;
    font-weight: bold;
  }
  .btn:hover{
    background:  rgb(6, 164, 255);
    box-shadow: 5px 5px 14px -5px rgba(40, 65, 203, 0.5);
    color: var(--var-white);
    width: 200px;
    height: auto;
  }
  .btn-secondary{
    background: none;
    border: 1px solid white;
    color: var(--var-white);
  }
  
  .btn-secondary:hover{
    background: #fff;
    color: var(--var-blue);
  }
  /*animacion*/
  .animation{
    position: absolute;
    width: 100%;
    top: 20px;
    left: 0;

  }
  .animation path{
    stroke: var(--var-blue);
    stroke-dasharray: 3402;
    stroke-dashoffset: 3402;
    animation: animatesvg 3s linear forwards;
  }
  @keyframes animatesvg{
    to{
      stroke-dashoffset: 0;
    }
  }
  /*section 2*/

    .section-2{
        background-color: none; /* Fondo negro por defecto */
        color: white;
        align-items: center;
        justify-content: center;
        text-align: center;
        height: auto;
    }

    .section .h1{
      font-family: 50px;
      margin: 50px auto;
      font-weight: bolder;
      padding: 50px;
      font-size: 60px;
      width: 85%;
    }
    .section .h2{
      margin: auto;
      padding: 50px;
      font-size: 20px;
      width: 70%;
    }

    
   @keyframes animate {
      0%, 100% {
        transform: translateY(-20px)
      }
      50%{
        transform: translateY(20px)
      }
   }

