<style>
  body {
    margin: 0;
    height: 300vh; /* Altura para permitir el scroll */
    transition: background-color 1s ease; /* Transición suave */
    position: relative;
    }

    .section {
        padding: 50px;
        color: #f4f4f4;
        background:none;
        width: 100%;
        height: 90vh; /* Altura de cada sección igual a la altura de la ventana */
        transition: background-color 1.5s ease; /* Transición suave del color */
